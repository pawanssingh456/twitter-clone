extends layouts/mainLayout.pug 

block content 
    if errorMessage
        span.errorMessage #{errorMessage}
    else 
        script. 
            let chatId = '!{chat._id}'

        .chat-page-container 
            .chat-title-bar-container 
                +createChatImage(chat, user)
                span#chatName This is the chat

            .main-content-container 
                .chat-container 
                    .chat-messages

                    .footer 
                        textarea(name="messageInput", placeholder="Type a message...") 
                        button.sendMessageButton
                            i.fas.fa-paper-plane

block scripts
    script(src="/js/chat.js") 